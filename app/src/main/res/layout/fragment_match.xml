<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto_="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_grey600">
    <com.davidmadethis.dampp.custom.ScaleImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bg_2"
        android:id="@+id/scaleImageView"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            auto_:ms9_affectsDisplayedPosition="true">
            <ImageView
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:id="@+id/close_btn"
                app:srcCompat="@drawable/ic_close_24dp"
                style="@style/ic_views"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
        <ImageView
            android:layout_width="@dimen/ic_width"
            android:layout_height="@dimen/ic_height"
            android:id="@+id/options_btn"
            app:srcCompat="@drawable/ic_more_horiz_24dp"
            android:layout_alignParentEnd="true"
            style="@style/ic_views"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="@dimen/ic_width"
            android:layout_height="@dimen/ic_height"
            app:srcCompat="@drawable/ic_vertical_align_bottom_24dp"
            android:id="@+id/oe_image_download"
            style="@style/ic_views"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="@dimen/ic_width"
            android:layout_height="@dimen/ic_height"
            app:srcCompat="@drawable/heart_on"
            style="@style/ic_views"
            android:layout_toRightOf="@+id/oe_image_download"
            android:layout_toEndOf="@+id/oe_image_download"/>

    </RelativeLayout>

</RelativeLayout>